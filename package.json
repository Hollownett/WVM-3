{
  "name": "virtual-monitor",
  "version": "1.2.0",
  "description": "Floating virtual monitor with embedded windows and per-app audio routing.",
  "author": "hollownett@gmail.com",
  "license": "MIT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w"
  },
  "build": {
    "appId": "com.yourco.virtualmonitor",
    "productName": "Virtual Monitor",
    "files": [
      "**/*",
      "!bin/**"
    ],
    "extraResources": [
      { "from": "bin/SoundVolumeView.exe", "to": "SoundVolumeView.exe" }
    ],
    "asar": true,
    "npmRebuild": true,
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico",
      "artifactName": "VirtualMonitor-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "node-window-manager": "^2.2.4"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12"
  }
}
